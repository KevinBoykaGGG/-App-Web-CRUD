@model IEnumerable<WebApplication1.Models.Cliente>

@{
    ViewData["Title"] = "Main Menu";
}

<h1>Clientes Vigientes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                <button type="button" class="btn btn-outline-primary">
                    <a asp-action="Edit" asp-route-id="@item.NumCliente">Edit</a> 
                </button>|
                <a asp-action="Details" asp-route-id="@item.NumCliente">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NumCliente">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
